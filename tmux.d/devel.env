export PROJDIR="$HOME/Projects"

function setup_shop()
{
  tmux new-window -c $PROJDIR -n "debug" -d
}

# Based on https://unix.stackexchange.com/questions/50208/how-to-change-the-working-directory-of-invoking-shell-using-a-script
function pcd()
{
  cd $PROJDIR/$1
}
